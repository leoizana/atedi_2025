{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block javascripts %}        
    <script src="{{ asset('assets/js/searchBar.js') }}"></script>
{% endblock %}

{% block body %}
    <div class='text-center mb-2'>	
        <div class='h2 mb-3 font-weight-bold'>Liste des clients</div>
    </div>
    <div class='text-center mb-2'>	
        <a href='{{ path('client_new') }}'><input type='button' value="Ajouter une fiche client" class='grey-btn f-20 py-2 px-4' /></a>
    </div>

    <hr>

    <input class='w-100 mb-3 p-2' type="text" id="searchBar" placeholder="Rechercher un client">

    <div class='container list'>
        <div class="row tab-head p-2">
            <div class="col-3">Nom</div>
            <div class="col-3">Prénom</div>
            <div class="col-2">Phone</div>
            <div class="col-4">Email</div>
        </div>

        {% for client in clients %}
            <a class='data-row' href="{{ path('client_show', {'id': client.id}) }}">
                <div class="row link default p-2">
                    <div class="col-3 my-auto">{{ client.lastName }}</div>
                    <div class="col-3 my-auto">{{ client.firstName }}</div>
                    <div class="col-2 my-auto">{{ client.phone }}</div>
                    <div class="col-4 my-auto">{{ client.email ?: "<div class='missing-info'>Non-renseignée</div>" }}</div>
                </div>
            </a>
        {% else %}
            <div class="row">
                <div class='col text-center alert-label p-2'>Aucun clients enregistrés</div>
            </div>
        {% endfor %}
        
    </div>
{% endblock %}
