{% extends 'base.html.twig' %}

{% block title %}Liste des brochures{% endblock %}

{% block javascripts %}        
    <script src="{{ asset('assets/js/searchBar.js') }}"></script>
{% endblock %}

{% block body %}
    <div class='text-center mb-2'>	
        <div class='h2 mb-3 font-weight-bold'>Liste des brochures</div>
    </div>
    <div class='text-center mb-2'>	
        <a href='{{ path('booklet_new') }}'><input type='button' value="Ajouter une brochure" class='grey-btn f-20 py-2 px-4' /></a>
    </div>

    <hr>

    <input class='w-100 mb-3 p-2' type="text" id="searchBar" placeholder="Rechercher une brochure">

    <div class='container list'>
        <div class="row tab-head p-2">
            <div class="col-9">Titre</div>
            <div class="col-3">Actions</div>
        </div>

        {% for booklet in booklets %}
            <a class='data-row'>
                <div class="row link default p-2">
                    <div class="col-9 my-auto">{{ booklet.title }}</div>
                    <div class="col-3 my-auto">
                        <form method="post" action="{{ path('booklet_edit', {'id': booklet.id}) }}"><button class="grey-btn px-3 float-left mr-3">Modifier</button></form>
                        {{ include('booklet/_delete_form.html.twig') }}
                    </div>
                </div>
            </a>
        {% else %}
            <div class="row">
                <div class='col text-center alert-label p-2'>Aucune brochures enregistr√©es</div>
            </div>
        {% endfor %}
        
    </div>
{% endblock %}