{{ form_start(form) }}

    <div class="p-4 form container-background">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class='col-5 mb-3'>
                    <h5>Titre</h5>            
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title) }}
                </div>
                <div class='col-3'>
                    <h5>Prix</h5>            
                    {{ form_errors(form.price) }}
                    <div class="input-group">
                    {{ form_widget(form.price) }}
                        <div class="input-group-append">
                            <span class="input-group-text">â‚¬</span>
                        </div>
                    </div>
                </div>
                <div class='col-4'>
                    <h5><i class="fas fa-info-circle mr-2" data-toggle="tooltip" title="Veuillez entrer un code couleur au format HEX sans le # (Ex: 2443a6)"></i>Couleur</h5>            
                    {{ form_errors(form.color) }}
                    <div class='row'>
                        <div class='col'>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">#</div>
                                </div>
                                {{ form_widget(form.color, {'attr': {'maxlength': '6', 'class': 'color-picker'}}) }}
                            </div>
                        </div>
                        {% if app.request.get('_route') == 'task_edit' %}
                            <div class='col-md-auto my-auto'>                                                       
                                    <div class='color-box' data-color='#{{ form.vars.value.color }}'></div>                            
                            </div>
                        {% endif %}
                    </div>
                </div>

                <button class="green-btn py-2 px-4 mt-3">{{ button_label|default('Valider') }}</button>
            </div>
        </div>
    </div>

{{ form_end(form) }}
