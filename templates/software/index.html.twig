{% extends 'base.html.twig' %}

{% block title %}Liste des logiciels{% endblock %}

{% block javascripts %}        
    <script src="{{ asset('assets/js/searchBar.js') }}"></script>
{% endblock %}

{% block body %}
    <div class='text-center mb-2'>	
        <div class='h2 mb-3 font-weight-bold'>Liste des logiciels</div>
    </div>
    <div class='text-center mb-2'>	
        <a href='{{ path('software_new') }}'><input type='button' value="Ajouter un logiciel" class='grey-btn f-20 py-2 px-4' /></a>
    </div>

    <hr>

    <input class='w-100 mb-3 p-2' type="text" id="searchBar" placeholder="Rechercher un logiciel">

    <div class='container list'>
        <div class="row tab-head p-2">
            <div class="col-5">Titre</div>
            <div class="col-4">Type</div>
            <div class="col-3">Actions</div>
        </div>

        {% for software in softwares %}
            <a class='data-row'>
                <div class="row link default p-2">
                    <div class="col-5 my-auto">{{ software.title }}</div>
                    <div class="col-4 my-auto">{{ software.type }}</div>
                    <div class="col-3 my-auto">
                        <form method="post" action="{{ path('software_edit', {'id': software.id}) }}"><button class="grey-btn px-3 float-left mr-3">Modifier</button></form>
                        {{ include('software/_delete_form.html.twig') }}
                    </div>
                </div>
            </a>
        {% else %}
            <div class="row">
                <div class='col text-center alert-label p-2'>Aucun logiciels enregistr√©s</div>
            </div>
        {% endfor %}
        
    </div>
{% endblock %}