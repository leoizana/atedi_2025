{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block javascripts %}        
    <script src="https://ajax.googleapis.com/ajax/libs/mootools/1.4.2/mootools-yui-compressed.js" type="text/javascript"></script>
    <script src="//code.highcharts.com/3.0.10/adapters/mootools-adapter.js" type="text/javascript"></script>

    <script src="https://code.highcharts.com/4.1.8/highcharts.js"></script>
    <script type="text/javascript">{{ chart(chart1) }}</script>
    <script type="text/javascript">{{ chart(chart2) }}</script>
    <script type="text/javascript">{{ chart(chart3) }}</script>
    <script type="text/javascript">{{ chart(chart4) }}</script>
{% endblock %}

{% block body %}
    <div class='text-center mb-2'>	
        <div class='h2 font-weight-bold'>Statistiques</div>
    </div>

    <hr>

    <div class='container list'>
        <h4 class='text-center'>Nombre d'interventions : {{ interventions|length }}</h4>
        <div class='row justify-content-center mt-5'>
            <div class='col'><div class='chart' id="interventionTasks"></div></div>
            <div class='col'><div class='chart' id="interventionTechnicians"></div></div>
        </div>
        <div class='row justify-content-center mt-5'>
            <div class='col'><div class='chart' id="interventionEquipment"></div></div>
            <div class='col'><div class='chart' id="interventionOperatingSystems"></div></div>
        </div>
    </div>
{% endblock %}
